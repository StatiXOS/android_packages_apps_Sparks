<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.settings">

    <uses-permission android:name="android.permission.NAVIGATION_EDITOR" />

    <application>

        <!-- Global navbar settings -->
        <activity android:name="Settings$NavigationSettingsActivity"
                android:label="@string/bottom_nav_navigation_title"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="com.android.settings.FRAGMENT_CLASS"
                android:value="com.statix.sparks.fragments.navigation.Navigation" />
        </activity>

        <!-- Smartbar settings -->
        <activity android:name="Settings$SmartbarSettingsActivity"
                android:label="@string/smartbar_settings_title"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="com.android.settings.FRAGMENT_CLASS"
                android:value="com.statix.sparks.preferences.SmartbarSettings" />
        </activity>

        <!-- Fling settings -->
        <activity android:name="Settings$FlingSettingsActivity"
                android:label="@string/fling_settings"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="com.android.settings.FRAGMENT_CLASS"
                android:value="com.statix.sparks.preferences.FlingSettings" />
        </activity>

        <!-- Pulse settings -->
        <activity android:name="Settings$PulseSettingsActivity"
                android:label="@string/pulse_settings"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="com.android.settings.FRAGMENT_CLASS"
                android:value="com.statix.sparks.preferences.PulseSettings" />
        </activity>

        <!-- System action picker -->
        <activity android:name="com.statix.sparks.preferences.ActionPickerDialogActivity"
                android:theme="@style/Theme.SmartBar.Dialog"
                android:label="@string/choose_action_title"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <!-- Icon pack picker -->
        <activity android:name="com.statix.sparks.preferences.IconPickerActivity"
                android:theme="@style/Theme.SmartBar.Dialog"
                android:label="@string/icon_pack_picker_dialog_title"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>


        <!-- Icon picker proxy for gallery -->
        <activity android:name="com.statix.sparks.preferences.IconPickerGallery"
            android:theme="@style/Theme.SmartBar.Dialog"
            android:label="@string/icon_pack_picker_dialog_title"
            android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <!-- Icon pack grid -->
        <activity android:name="com.statix.sparks.preferences.IconPackGridActivity"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

	<!-- Sparks Menus -->

        <!-- Miscellaneous -->
        <activity android:name="Settings$MiscSettingsActivity"
                android:label="@string/misc_category"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="com.android.settings.FRAGMENT_CLASS"
                android:value="com.statix.sparks.fragments.misc.Misc" />
        </activity>

        <!-- Statusbar -->
        <activity android:name="Settings$StatusbarSettingsActivity"
                android:label="@string/statusbar_category"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="com.android.settings.FRAGMENT_CLASS"
                android:value="com.statix.sparks.fragments.statusbar.Statusbar" />
        </activity>

        <!-- System -->
        <activity android:name="Settings$SystemSettingsActivity"
                android:label="@string/system_category"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="com.android.settings.FRAGMENT_CLASS"
                android:value="com.statix.sparks.fragments.system.System" />
        </activity>	

        <!-- Gestures -->
        <activity android:name="Settings$GesturesSettingsActivity"
                android:label="@string/gestures_category"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="com.android.settings.FRAGMENT_CLASS"
                android:value="com.statix.sparks.fragments.gestures.GestureSettings" />
        </activity>

        <!-- Lockscreen -->
        <activity android:name="Settings$LockscreenSettingsActivity"
                android:label="@string/lockscreen_category"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="com.android.settings.FRAGMENT_CLASS"
                android:value="com.statix.sparks.fragments.lockscreen.Lockscreen" />
        </activity>
    </application>
</manifest>
